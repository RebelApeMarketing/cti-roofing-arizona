---
import Layout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Testimonials from "../components/Testimonials.astro";
import WhatToExpect from "../components/WhatToExpect.astro";
import Symptoms from "../components/Symptoms.astro";
import InsuranceCoverage from "../components/InsuranceCoverage.astro";
import CtaInline from "../components/CtaInline.astro";
import ServiceAreas from "../components/ServiceAreas.astro";
import Faq from "../components/Faq.astro";
import Certified from "../components/Certified.astro";
import Portfolio from "../components/Portfolio.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Free Roof Inspection Mesa AZ | Up to 97% Covered by Insurance | CTI Roofing"
  description="Mesa & Tempe homeowners: Get a free roof inspection and find out if insurance covers your new roof. No obligation. Licensed & insured. Call (480) 530-8346."
>
  <Header />
  <Hero
    eyebrow="SERVING ARIZONA HOMEOWNERS SINCE 2003"
    headline="Let Insurance Cover Your Roof Replacement"
    subhead="With proper inspection and claim support, we document the damage and complete the roof replacement."
    primaryText="Schedule Free Inspection"
    primaryHref="#form"
  />
  <Certified bgColor="bg-slate-100" />
  <Testimonials bgColor="bg-white" />
  <WhatToExpect bgColor="bg-slate-100" />
  <Symptoms bgColor="bg-white" />
  <InsuranceCoverage bgColor="bg-slate-100" />
  <Portfolio bgColor="bg-white" />
  <ServiceAreas bgColor="bg-slate-100" />
  <Faq bgColor="bg-white" />
  <CtaInline />
  <Footer />
</Layout>